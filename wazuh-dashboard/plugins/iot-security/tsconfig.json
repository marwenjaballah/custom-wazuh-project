{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "./target",
    "sourceMap": true,
    "target": "es2017",
    "lib": ["es6", "dom", "es2017", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "types": ["node"]
  },
  "include": [
    "common/**/*",
    "server/**/*",
    "public/**/*"
  ],
  "exclude": [
    "node_modules",
    "target",
    "test"
  ]
}
